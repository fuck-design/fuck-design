{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "outDir": "lib",
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["jest", "react", "node"]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "test/**/*",
    "__test__/**/*",
    ".eslintrc.js",
    ".stylelintrc.js",
    ".prettierrc.js"
  ],
  "exclude": ["node_modules", "build", "jest"]
}
